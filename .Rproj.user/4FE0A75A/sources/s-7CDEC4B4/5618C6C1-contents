# Script to generate the Map

ggplot(map_data("state")) + 
  geom_polygon(data = mapjoin, aes(x=long, y = lat, fill = count, group = name)) + 
  coord_fixed(1.3) +
  scale_fill_continuous(name = "Count", low = "blue", high = "red") +
  xlab("Longitude (°)") + 
  ylab("Latitude (°)") +
  ggtitle("UFO Sightings Per State")
